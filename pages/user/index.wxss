.container{
  width:640rpx;
  margin:0 auto;
  position: relative;
  padding-top: 20rpx;
}
.user-avator{
  width:640rpx;
  height: 206rpx;
  border-radius: 50%;
  display: flex;
}
.avator{
  width:136rpx;
  height: 136rpx;
}
.icon{
  width:130rpx;
  height:130rpx;
  border-radius: 50%;
  position: absolute;
  top:-10rpx;
  left:-29rpx;
  border:30rpx solid #fff;
}
.icon2{
  width:20rpx;
  height: 140rpx;
  background-color: #fff;
  position: absolute;
  left:130rpx;
}
.user-lost{
  width:100%;
  height:85rpx;
  border-bottom:1rpx solid #eeeeee;
}
.box{
  width:640rpx;
  height: 100%;
  line-height:85rpx;
  margin:0 auto;
  position: relative;
  display: flex;
  justify-content:space-between;
}
.box .txt{
  font-size: 36rpx;
}
